.container
  .jumbotron
    .row
      .col-md-6.col-md-offset-1
        %h2 You're almost done!
        %p Now create a password to securely access your account.
      .col-md-4
        = semantic_form_for(resource, :as => resource_name, :url => confirm_path) do |form|
          -#
            .alert.alert-danger
              = devise_error_messages!
          = form.inputs :label => false do
            %p Password
            = form.input :password, :input_html => {:autofocus => true, :class => 'form-control', :placeholder => 'Password' }, :label => false

            %p Repeat Password      
            = form.input :password_confirmation, :input_html => { :class => 'form-control', :placeholder => 'Repeat Password' }, :label => false
            = form.input :confirmation_token, :as => :hidden
            //= form.actions do
            = form.action :submit, :label => 'Confirm Account', :button_html => { :class => 'btn btn-lg btn-primary btn-block' }